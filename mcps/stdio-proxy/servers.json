{
  "mcpServers": {
    "sequential-thinking": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"]
    },
    "memory": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-memory"],
      "env": {
        "MEMORY_FILE_PATH": "/data/memory/memory.json"
      }
    },
    "kapture": {
      "command": "npx",
      "args": ["-y", "kapture-mcp", "bridge"],
      "env": {
        "KAPTURE_BRIDGE_PORT": "61822"
      }
    }
  }
}
